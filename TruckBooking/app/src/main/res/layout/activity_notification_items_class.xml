<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/purple_700"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Customer Name"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_700" />

            <TextView
                android:id="@+id/customerNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Customer No"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_700" />

            <TextView
                android:id="@+id/customerLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Customer Location"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_700" />

            <TextView
                android:id="@+id/deliveryLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Delivery Location"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_700" />

            <TextView
                android:id="@+id/wasteType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Waste Type"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_700" />

            <TextView
                android:id="@+id/wasteQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Waste Quantity"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_700" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Price"
                android:textAlignment="viewStart"
                android:textColor="@color/purple_700" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_textview_700_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:padding="2dp"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/acceptedBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_textview_700_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:padding="2dp"
                    android:text="Accepted"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/callBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_textview_700_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:padding="2dp"
                    android:text="Call"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>